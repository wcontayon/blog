 {{> header }}

  <main id="main" data-aos="fade-up">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>{{ title }}</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>{{ title }}</li>
          </ol>
        </div>

      </div>
    </section><!-- Breadcrumbs Section -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-9">
            <div class="portfolio-details-slider swiper">
              <div class="swiper-wrapper align-items-center">

                <div class="swiper-slide">
                  <img src="{{ img }}" alt="">
                </div>

              </div>
              <div class="swiper-pagination"></div>
            </div>
            <div class="portfolio-info" style="font-size: 12px; padding-top: 10px; padding-bottom: 10px;">
                <strong>Published</strong>: {{ moment date lang="fr" format="DD MMM [']YY" }} / by <strong>{{ author }}</strong><br />
                <strong>{{ collection }}</strong>
            </div>
            <hr />
            <div class="portfolio-description" style="border: 1px solid #e2eefd; background-color:#fff; box-shadow: 0px 0 30px rgb(34 34 34 / 8%); padding:20px;">
                {{{ contents }}}
            </div>
          </div>

          <div class="col-lg-3">
            <div class="portfolio-info">
              
            </div>
            
          </div>

        </div>

      </div>
        <ul>
    {{#each (limit collections.articles this.pagination.end this.pagination.start)}}
        <li class="post">
            <h2 class="entry-title">
                <a href="{{ this.path }}" rel="bookmark">{{ this.title }}</a>
            </h2>
            <article class="entry-summary">
                {{{ this.blurb }}}
            </article>
            <footer>

                <a href="{{ this.path }}" class="button">Read More</a>
            </footer>
        </li>
    {{/each}}
  </ul>
    </section><!-- End Portfolio Details Section -->

    {{#if this.pagination}}
        <nav class="pagination">
            {{#if this.pagination.next}}
                <a href="{{this.pagination.next.path}}">&lt; Prev</a>
            {{/if}}
        
            {{#if this.pagination.prev}}
                <a href="{{this.pagination.prev.path}}">Next &gt;</a>
            {{/if}}
        </nav>
    {{/if}}

  </main><!-- End #main -->

  {{> footer }}